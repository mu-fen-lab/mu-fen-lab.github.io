// ç”Ÿæˆæ—¶é—´èŠ‚ç‚¹
const timeline = document.querySelector('.timeline');
events.forEach((event, index) => {
    const node = document.createElement('div');
    node.className = 'node';
    node.innerHTML = `
        <div style="font-size:24px">${event.icon}</div>
        <h3 style="margin:5px 0">${event.year}å¹´ - ${event.title}</h3>
        <p style="color:#666">${event.content}</p>
    `;
    node.style.left = `${100 + (event.year-2015)*5}px`;
    node.style.top = `${(event.year-2015)*300 + Math.sin(index)*50}px`;
    timeline.appendChild(node);
});

// è‡ªåŠ¨æ»šåŠ¨é€»è¾‘
let currentYear = 2015;
let scrollPos = 0;
const yearElement = document.getElementById('yearIndicator');
const nodes = document.querySelectorAll('.node');

function updateNodes() {
    nodes.forEach(node => {
        const nodeYear = parseInt(node.querySelector('h3').textContent);
        node.classList.toggle('active', nodeYear <= currentYear);
    });
}

function showAchievements() {
    document.getElementById('achievement').style.display = 'block';
    const list = document.getElementById('achievement-list');
    achievements.forEach(text => {
        const li = document.createElement('li');
        li.textContent = text;
        li.style.margin = '10px 0';
        list.appendChild(li);
    });
}

function animate() {
    if(currentYear < 2025) {
        scrollPos += 3;
        window.scrollTo(0, scrollPos);
        
        currentYear = 2015 + Math.floor(scrollPos/200);
        yearElement.textContent = `ğŸš© å½“å‰å¹´ä»½ï¼š${currentYear}`;
        
        // æ³¢åŠ¨æ•ˆæœ
        timeline.style.transform = `translateY(${Math.sin(scrollPos/100)*5}px)`;
        
        updateNodes();
        requestAnimationFrame(animate);
    } else {
        showAchievements();
    }
}

window.addEventListener('load', () => {
    setTimeout(animate, 2000); // å»¶è¿Ÿå¯åŠ¨
});
